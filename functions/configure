#!/bin/bash

DIR="$(dirname "$0")"

GSETTINGS="$DIR/data/gsettings.list"
DSETTINGS="$DIR/data/dsettings.list"

# Automatically set preferred gsettings keys as outlined in the 'gsettings.list' file
function set_preferences {
    show_info 'Setting preferred application-specific & desktop settings...'
    while IFS= read line
    do
        eval gsettings set $line
    done < "$GSETTINGS"
    while IFS= read line
    do
        eval dconf write $line
    done < "$DSETTINGS"
    export EDITOR='vim'
}

function preferences {
    set_preferences
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Settings changed successfully." 8 78
    configure
}

# dot files
function dotfiles {
    show_info 'Downloading dot-files...'
    WD=$PWD
    eval cd $HOME
    curl -O https://raw.githubusercontent.com/mpadge/ubuntu-setup/master/.Rprofile
    curl -O https://raw.githubusercontent.com/mpadge/ubuntu-setup/master/.bashrc
    curl -O https://raw.githubusercontent.com/mpadge/ubuntu-setup/master/.tmux.conf
    curl -O https://raw.githubusercontent.com/mpadge/ubuntu-setup/master/.vimrc
    eval cd $WD
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "dot files downloaded successfully." 8 78
    configure
}

# dot files copy
function dotfiles_cp {
    show_info 'Copying dot-files to git repo...'
    cp $HOME/.bash_aliases /data/Dropbox/mark/system/ubuntu-setup/dot/.bash_aliases
    cp $HOME/.Rprofile /data/Dropbox/mark/system/ubuntu-setup/dot/.Rprofile
    cp $HOME/.bashrc /data/Dropbox/mark/system/ubuntu-setup/dot/.bashrc
    cp $HOME/.vimrc /data/Dropbox/mark/system/ubuntu-setup/dot/.vimrc
    cp $HOME/.tmux.conf /data/Dropbox/mark/system/ubuntu-setup/dot/.tmux.conf
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "dot files copied successfully." 8 78
    configure
}

# Configure System
function configure {
    eval `resize`
    CONF=$(whiptail \
        --notags \
        --title "Configure System" \
        --menu "\nWhat would you like to do?" \
        --cancel-button "Go Back" \
        $LINES $COLUMNS $(( $LINES - 12 )) \
        preferences 'Set preferred application-specific & desktop settings' \
        dotfiles    'Download/replace all dotfiles' \
        dotfiles_cp 'Copy dotfiles to git repo' \
        3>&1 1>&2 2>&3)
     
    exitstatus=$?
    if [ $exitstatus = 0 ]; then
        $CONF
    else
        main
    fi
}
